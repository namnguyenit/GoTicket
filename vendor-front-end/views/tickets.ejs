<%- include('partials/head', { title }) %>
<%- include('partials/sidebar') %>

<main class="content">
  <%- include('partials/topbar') %>
  <section class="card">
    <div class="card-title row-between">
      <span>Danh sách các vé</span>
      <button class="btn btn-primary" data-open-modal="#ticketModal"><i class="ri-add-circle-line"></i> Tạo</button>
    </div>
      <div class="table-wrap">
        <table class="table" id="ticketTable">
          <thead>
            <tr>
              <th>Tên phương tiện</th>
              <th>Loại xe</th>
              <th>Biển số</th>
              <th>Ghế (trống/tổng)</th>
              <th>Giờ xuất hành</th>
              <th>Ngày khởi hành</th>
              <th>Tuyến đường</th>
              <th>Giá</th>
              <th>Trạng thái</th>
              <th>Hành động</th>
            </tr>
          </thead>
          <tbody>
            
          </tbody>
        </table>
      </div>
      <div class="row-between" id="ticketPagination" style="margin-top:12px;">
        <div>
          <label for="perPageSel" class="muted" style="margin-right:6px;">Mỗi trang:</label>
          <select id="perPageSel">
            <option value="10">10</option>
            <option value="20" selected>20</option>
            <option value="50">50</option>
          </select>
        </div>
         <div class="row" style="gap:8px; align-items:center;">
           <label class="muted">Lọc:</label>
           <select id="vehicleTypeFilter">
             <option value="">Tất cả</option>
             <option value="bus">Bus</option>
             <option value="train">Train</option>
           </select>
         </div>
         <div class="pager">
           <button class="btn" id="prevPage">Trước</button>
           <span id="pageInfo" class="muted" style="margin:0 8px;">Trang 1/1</span>
           <button class="btn" id="nextPage">Sau</button>
         </div>
      </div>
  </section>

  
  <div class="modal" id="ticketModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-header">
        <h3>Tạo vé</h3>
        <button class="modal-close" data-close-modal>&times;</button>
      </div>
      <form id="ticketForm" class="modal-body">
        <div class="form-group dropdown">
          <label>Chọn phương tiện</label>
          <select name="vehicleId">
            
          </select>
        </div>
        <div class="form-group">
          <label>Giờ khởi hành - Giờ đến</label>
          <div class="row">
            <input type="time" name="depTime" step="60" style="margin-right:8px;" />
            <input type="time" name="arrTime" step="60" />
          </div>
          <small class="muted">Nhập theo ý bạn (VD: 08:15 và 10:45)</small>
        </div>
        <div class="form-group dropdown">
          <label>Chọn ngày khởi hành</label>
          <input type="date" name="startDate" />
        </div>
        <div class="form-group dropdown">
          <label>Chọn điểm khởi hành</label>
          <select name="fromCity"></select>
        </div>
        <div class="form-group dropdown">
          <label>Chọn điểm kết thúc</label>
          <select name="toCity"></select>
        </div>
        <div class="form-group" id="basePriceField">
          <label>Giá vé (cơ bản)</label>
          <input type="number" name="price" placeholder="Nhập giá vé" />
        </div>
        <div class="form-group" id="trainPriceFields" style="display:none">
          <label>Giá tàu</label>
          <div class="row">
            <input type="number" name="regular_price" placeholder="Giá toa thường" style="margin-right:8px;" />
            <input type="number" name="vip_price" placeholder="Giá toa VIP" />
          </div>
          <small class="muted">Chỉ áp dụng khi phương tiện là tàu hoả</small>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn" data-close-modal>Hủy</button>
          <button type="submit" class="btn btn-primary">Tạo</button>
        </div>
      </form>
    </div>
  </div>

  
  <div class="modal" id="editTicketModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-header">
        <h3>Sửa vé</h3>
        <button class="modal-close" data-close-modal>&times;</button>
      </div>
      <form id="editTicketForm" class="modal-body">
        <input type="hidden" name="id" />
        <div class="form-group">
          <label>Thời gian khởi hành</label>
          <input type="datetime-local" name="departure_datetime" />
        </div>
        <div class="form-group">
          <label>Thời gian đến</label>
          <input type="datetime-local" name="arrival_datetime" />
        </div>
        <div class="form-group" id="editTrainPrices" style="display:none">
          <label>Giá tàu</label>
          <div class="row">
            <input type="number" name="regular_price" placeholder="Giá toa thường" style="margin-right:8px;" />
            <input type="number" name="vip_price" placeholder="Giá toa VIP" />
          </div>
        </div>
        <div class="form-group" id="editBasePrice">
          <label>Giá cơ bản (bus)</label>
          <input type="number" name="base_price" placeholder="Giá bus" />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn" data-close-modal>Hủy</button>
          <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('partials/footer-scripts') %>